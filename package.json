{
  "name": "rag-chat-api",
  "version": "1.0.0",
  "description": "RAG Chat API backend using Express.js and LangChain with OpenAI",
  "main": "api/index.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "vercel-dev": "vercel dev",
    "deploy": "vercel --prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:neon": "node integration-tests/test-neon-integration.js",
    "test:blob": "node integration-tests/test-blob-integration.js",
    "test:rag": "node integration-tests/test-rag.js",
    "test:integration": "npm run test:neon && npm run test:blob && npm run test:rag",
    "debug:neon": "node integration-tests/debug-neon-db.js",
    "debug:simple": "node integration-tests/debug-simple.js",
    "verify:blob": "node integration-tests/verify-blob-integration.js",
    "setup:neon": "node -e \"console.log('Run the SQL script in scripts/neon-setup.sql in your Neon console')\"",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "docker:build": "docker build -t rag-chat-api .",
    "docker:run": "docker run -p 3000:3000 --env-file .env rag-chat-api",
    "health": "curl -f http://localhost:3000/health || exit 1",
    "clean": "rm -rf node_modules package-lock.json && npm install",
    "security:audit": "npm audit --audit-level moderate",
    "precommit": "npm run lint && npm run format:check && npm run test"
  },
  "keywords": [
    "express",
    "langchain",
    "openai",
    "rag",
    "chat",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@langchain/community": "^0.3.44",
    "@langchain/openai": "^0.0.14",
    "@vercel/blob": "^1.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^7.1.0",
    "langchain": "^0.0.208",
    "langchain-core": "^0.0.4",
    "morgan": "^1.10.0",
    "multer": "^2.0.0",
    "node-fetch": "^3.3.2",
    "openai": "^4.20.1",
    "pdf-parse": "^1.1.1",
    "pg": "^8.16.0"
  },
  "devDependencies": {
    "axios": "^1.9.0",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.4.0",
    "form-data": "^4.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.5.3",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
